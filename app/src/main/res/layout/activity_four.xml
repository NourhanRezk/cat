<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    tools:context=".Four">

    <include
        android:id="@+id/include4"
        layout="@layout/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_que"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Does s/he tend to take things literally??"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="#387c6d"
        android:padding="@dimen/_20sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include4" />

    <ImageView
        android:id="@+id/four"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_200sdp"
        android:layout_margin="@dimen/_20sdp"
        android:src="@drawable/proj2"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_que" />
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/four">

        <RadioButton
            android:id="@+id/btn_FourYes"
            android:buttonTint="#387c6d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_100sdp"
            android:text="Yes"
            android:layout_marginTop="@dimen/_20sdp"
            android:textColor="#387c6d"
            android:textSize="@dimen/_18sdp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/btn_FourNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No"
            android:buttonTint="#387c6d"
            android:textColor="#387c6d"
            android:layout_marginTop="@dimen/_20sdp"
            android:textSize="@dimen/_18sdp"
            android:textStyle="bold" />
    </RadioGroup>



    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btn_next5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:paddingStart="@dimen/_20sdp"
        android:paddingEnd="@dimen/_20sdp"
        android:text="next"
        android:textSize="30dp"
        app:fb_defaultColor="#387c6d"
        app:fb_radius="@dimen/_16sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>